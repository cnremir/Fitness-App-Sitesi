@model List<Kisi>
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .menu {
            position: fixed;
            top: 0;
            left: 0;
            width: 200px;
            height: 100%;
            background-color: #333333;
            overflow-y: auto;
        }

            .menu h1 {
                color: white;
                font-size: 24px;
                text-align: center;
                padding: 20px;
            }

            .menu a {
                display: block;
                color: white;
                font-size: 16px;
                text-decoration: none;
                padding: 10px;
            }

                .menu a:hover {
                    background-color: #666666;
                }

        .content {
            margin-left: 220px;
            padding: 20px;
        }

            .content h1 {
                color: #333333;
                font-size: 24px;
            }

            .content p {
                color: #666666;
                font-size: 16px;
            }

            .content table {
                width: 80%;
                margin: 0 auto;
                border-collapse: collapse;
            }

            .content th {
                background-color: #333333;
                color: white;
                padding: 10px;
            }

            .content td {
                background-color: white;
                color: #666666;
                padding: 10px;
                border: 1px solid #cccccc;
            }

                .content td:hover {
                    background-color: #f0f0f0;
                }

            .content .delete {
                background-color: #ff0000;
                color: white;
                padding: 5px;
                border: none;
                cursor: pointer;
            }

                .content .delete:hover {
                    background-color: #cc0000;
                }
    </style>
</head>
<body>
    <div class="content">
        <h1>Kullanıcılar</h1>
        <p>Bu sayfada sitenizdeki kullanıcıları görüntüleyebilir ve silebilirsiniz.</p>
        <table>
            <tr>
                <th>Id</th>
                <th>Ad Soyad</th>
                <th>Email</th>
                <th>Seçenekler</th>
            </tr>
            @foreach (var x in Model)
            {
                <tr data-plan-id="@x.KisiId">
                    <td>@x.KisiId</td>
                    <td>@x.Adi @x.Soyadi</td>
                    <td>@x.Email</td>
                    
                   
                    <td>
                        <form method="post" action="/Admin/KisiDuzenle">
                            <input type="hidden" name="kisiID" value="@x.KisiId" />
                            <button type="submit">Düzenle</button>
                        </form>
                        <form method="post" action="/Admin/DeleteKisi">
                            <input type="hidden" name="kisiID" value="@x.KisiId" />
                            <button type="submit">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>



