@model Danisan

@{
    ViewBag.Title = "Hesap Oluştur";
    Layout = null;
}

<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .content {
            padding: 20px;
            max-width: 800px;
            margin: 0 auto;
        }

        .profile {
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
        }

            .profile img {
                width: 200px;
                height: 200px;
                border-radius: 50%;
                object-fit: cover;
                margin-right: 20px;
            }

            .profile .info {
                display: table;
                width: 100%;
            }

                .profile .info h2 {
                    margin-top: 0;
                }

                .profile .info input, .profile .info select {
                    display: table-row;
                    margin-bottom: 5px;
                    width: calc(100% - 20px); /* 20px padding var */
                    padding: 10px;
                    border: 1px solid #cccccc;
                }

            .profile .save {
                background-color: #333333;
                color: white;
                padding: 10px;
                border: none;
                cursor: pointer;
                width: 100%;
                margin-top: 20px; 
            }

                .profile .save:hover {
                    background-color: #666666;
                }


                
    </style>
</head>
<body>
    <div class="content">
        <h1>Profil Düzenle</h1>
          @using (Html.BeginForm("BtnHesapOlustur", "Danisan", FormMethod.Post))
        {
            <div class="profile">
                <img src="https://cdn-icons-png.flaticon.com/512/6522/6522516.png" alt="Profil Resmi">
                <h2>Profil Fotoğrafı Linki:</h2>
                <input type="text" name="ProfilFotografiYolu" value="@Model.ProfilFotografiYolu" placeholder="profil fotoğrafı linki">
                <div class="info">


                    <h2>Adı:</h2>
                    <input type="text" name="Adi" value="@Model.Adi" placeholder="Adı">
                    <h2>Soyadı:</h2>
                    <input type="text" name="Soyadi" value="@Model.Soyadi" placeholder="Soyadı">
                    <h2>Yaş:</h2>
                    <input type="number" name="Yas" value="@Model.Yas" placeholder="Yaş">
                    <h2>Doğum Tarihi:</h2>
                    <input type="date" name="DogumTarihi" value="@Model.DogumTarihi" placeholder="Doğum Tarihi">
                    <h2>Telefon Numarası:</h2>
                    <input type="tel" name="TelNumarasi" value="@Model.TelNumarasi" placeholder="Telefon Numarası">
                    <h2>Cinsiyet:</h2>
                    <input type="text" name="Cinsiyet" value="@Model.Cinsiyet" placeholder="Cinsiyet">
                    <h2>Boy:</h2>
                    <input type="text" name="Boy" value="@Model.Boy" placeholder="Cinsiyet">
                    <h2>Kg:</h2>
                    <input type="text" name="Kg" value="@Model.Kg" placeholder="Cinsiyet">
                    <h2>Hedef:</h2>
                    <select name="Hedef">
                        <option value="kilo-verme" selected="@(Model.Hedef == "kilo-verme")">Kilo verme</option>
                        <option value="kilo-almak" selected="@(Model.Hedef == "kilo-almak")">Kilo almak</option>
                        <option value="kilo-korumak" selected="@(Model.Hedef == "kilo-korumak")">Kilo korumak</option>
                        <option value="kas-kazanmak" selected="@(Model.Hedef == "kas-kazanmak")">Kas kazanmak</option>
                    </select>

                </div>
                <button type="submit" class="save">Profil Kaydet</button>
            </div>
        }
    </div>
</body>
</html>
