@model Antrenor

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_AntrenorLayout.cshtml";
}

<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .content {
            margin-left: 220px;
            padding: 20px;
        }

            .content h1 {
                color: #333333;
                font-size: 24px;
            }

            .content p {
                color: #666666;
                font-size: 16px;
            }

            .content .profile {
                display: flex;
                align-items: center;
                justify-content: space-between;
                width: 80%;
                margin: 0 auto;
            }

                .content .profile img {
                    width: 200px;
                    height: 200px;
                    border-radius: 50%;
                    object-fit: cover;
                }

                .content .profile .info {
                    display: flex;
                    flex-direction: column;
                    gap: 10px;
                }

                    .content .profile .info h2 {
                        color: #333333;
                        font-size: 20px;
                    }

                    .content .profile .info input, .content .profile .info select, .content .profile .info button {
                        display: block;
                        width: 100%;
                        padding: 10px;
                        border: 1px solid #cccccc;
                        margin-bottom: 5px;
                    }

                .content .profile .save {
                    background-color: #333333;
                    color: white;
                    padding: 10px;
                    border: none;
                    cursor: pointer;
                }

                    .content .profile .save:hover {
                        background-color: #666666;
                    }
    </style>
</head>
<body>
    <div class="content">
        <h1>Profil Düzenle</h1>
        <p>Bu sayfada antrenörünüzün profilini düzenleyebilirsiniz.</p>
        @using (Html.BeginForm("BtnProfilDuzenle", "Antrenor", FormMethod.Post))
        {
            <div class="profile">
                <img src="@Model.ProfilFotografiYolu" alt="Profil Resmi">
                <div class="info">
                    

                    <h2>Adı:</h2>
                    <input type="text" name="Adi" value="@Model.Adi" placeholder="Adı">
                    <h2>Soyadı:</h2>
                    <input type="text" name="Soyadi" value="@Model.Soyadi" placeholder="Soyadı">
                    <h2>Yaş:</h2>
                    <input type="number" name="Yas" value="@Model.Yas" placeholder="Yaş">
                    <h2>Uzmanlık Alanı:</h2>
                    <select name="UzmanlikAlani">
                        <option value="kilo-verme" selected="@(Model.UzmanlikAlani == "kilo-verme")">Kilo verme</option>
                        <option value="kilo-almak" selected="@(Model.UzmanlikAlani == "kilo-almak")">Kilo almak</option>
                        <option value="kilo-korumak" selected="@(Model.UzmanlikAlani == "kilo-korumak")">Kilo korumak</option>
                        <option value="kas-kazanmak" selected="@(Model.UzmanlikAlani == "kas-kazanmak")">Kas kazanmak</option>
                    </select>
                    <h2>Deneyim:</h2>
                    <input type="number" name="Deneyimleri" value="@Model.Deneyimleri" placeholder="Deneyim">
                    
                    <h2>Doğum Tarihi:</h2>
                    <input type="date" name="DogumTarihi" value="@Model.DogumTarihi" placeholder="Doğum Tarihi">
                    <h2>Telefon Numarası:</h2>
                    <input type="tel" name="TelNumarasi" value="@Model.TelNumarasi" placeholder="Telefon Numarası">
                    <h2>Cinsiyet:</h2>
                    <input type="text" name="Cinsiyet" value="@Model.Cinsiyet" placeholder="Cinsiyet">
                    
                </div>
                <button type="submit" class="save">Profil Kaydet</button>
            </div>
        }
    </div>
</body>
</html>
