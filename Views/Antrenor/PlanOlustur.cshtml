@model List<Danisan>
@{
    ViewBag.Title = "Plan Oluştur";
    Layout = "~/Views/Shared/_AntrenorLayout.cshtml";
}
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
        }

        .content {
            margin-left: 220px;
            padding: 20px;
        }

            .content h1 {
                color: #333333;
                font-size: 24px;
            }

            .content p {
                color: #666666;
                font-size: 16px;
            }

            .content form {
                width: 80%;
                margin: 0 auto;
            }

            .content label {
                display: block;
                margin: 10px 0;
            }

            .content input, .content select, .content textarea {
                display: block;
                width: 100%;
                padding: 10px;
                border: 1px solid #cccccc;
            }

            .content button {
                background-color: #333333;
                color: white;
                padding: 10px;
                border: none;
                cursor: pointer;
            }

                .content button:hover {
                    background-color: #666666;
                }
    </style>
</head>
<body>
 
    <div class="content">
        <h1>Yeni Plan Oluştur</h1>
        <p>Bu sayfada yeni bir egzersiz veya beslenme planı oluşturabilirsiniz.</p>
        <form method="post">
            <label for="planadi">Plan Adı:</label>
            <input type="text" id="planname" name="planname" placeholder="Örnek: Kilo Verme Programı" required>
            <label for="plantype">Plan Türü:</label>
            <select id="plantipi" name="plantype" required>
                <option value="">Seçiniz</option>
                <option value="egzersiz">Egzersiz</option>
                <option value="beslenme">Beslenme</option>
            </select>
            <label for="planhedef">Hedef:</label>
            <select id="plangoal" name="plangoal" required>
                <option value="">Seçiniz</option>
                <option value="kilo-vermek">Kilo vermek</option>
                <option value="kilo-almak">Kilo almak</option>
                <option value="kilo-korumak">Kilo korumak</option>
                <option value="kas-kazanmak">Kas kazanmak</option>
            </select>
            <label for="plandanisanlar">Danışana Ata:</label>
            <select id="danisan" name="danisan" required>
                @foreach(var x in Model)
                {
                    <option value="@x.DanisanID">@x.Adi @x.Soyadi</option>
                    
                }
                
            </select>
            <label for="planbaslangic">Başlangıç Tarihi:</label>
            <input type="date" id="planstart" name="planstart" required>
            <label for="plansure">Süre (hafta):</label>
            <input type="number" id="planduration" name="planduration" min="1" max="52" required>
            <label for="plandetay">Plan Detayları:</label>
            <textarea id="plandetails" name="plandetails" rows="10" placeholder="Örnek: Pazartesi: Şınav, Mekik, Plank..." required></textarea>
            <button type="submit">Planı Oluştur</button>
        </form>
    </div>
</body>
</html>
